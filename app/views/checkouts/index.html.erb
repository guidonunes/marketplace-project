<div class="container align-items-center">

  <%= link_to "Back to home", root_path, class:"btn btn-flat mt-4"%>

  <div class="text-center mt-5">
    <h1 >My orders</h1>
  </div>

  <div class="row">
    <% @checkouts.each do |checkout| %>
      <div class="col-4 mb-3 mx-4" style="width: 24rem;">
        <div class="card-order-summary">

        <div class="card-order-summary my-5">
          <% if checkout.product.photo.attached? %>
            <%= cl_image_tag checkout.product.photo.key, class: 'card-img-top' %>
          <% else %>
            <%= image_tag 'wear_tadayori.jpg', class: 'card-img-top' %>
          <% end %>

          <p class="card-text text-center"><%= checkout.product.item_name %></p>

        </div>
        </div>

      </div>
    <%end%>

  </div>
</div>

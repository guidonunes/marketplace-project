<div class="container">
  <div class="py-4">
    <h2 class="card-subtitle">Sign in</h2>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign in", class: "btn-form text-center" %>
    </div>
  <% end %>

  <p class="mt-4">New here: <%= link_to "Sign up", new_user_registration_path, class: "text-decoration-none" %></p>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-decoration-none" %><br>

  <div class="mt-5">
    <%= link_to "Back to home", root_path, class: "btn btn-search-product mb-4 w-" %>
  </div>
</div>

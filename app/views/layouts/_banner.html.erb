<div class="carousel-overlay-container">
  <div class="carousel-container">
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= image_tag "katana_sakay.jpg", class: "d-block w-100 carousel-img" %>
        </div>
        <div class="carousel-item">
          <%= image_tag "wear_kensei.jpg", class: "d-block w-100 carousel-img" %>
        </div>
        <div class="carousel-item">
          <%= image_tag "wear_nature.png", class: "d-block w-100 carousel-img" %>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
  <h1 class="carousel-overlay-title">Bushido Silk & Steel</h1>
</div>

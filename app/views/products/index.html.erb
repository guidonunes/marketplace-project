
<%= render "layouts/banner" %>

<h2 class="card-title text-center mt-5">Get yourself ready to face your foes!</h2>
<h3 class="card-subtitle text-center mb-5">Browse our wares: </h3>
<br>



<div class="card-container">
  <div class="row m-5">
    <% @products.each do |product| %>
      <div class="card col-4 mb-3 mx-auto card-product" style="width: 24rem;">
        <% if product.photo.attached? %>
          <%= cl_image_tag product.photo.key, class: 'card-img-top mt-3' %>
        <% else %>
          <%= image_tag 'wear_tadayori.jpg', class: 'card-img-top mt-3' %>
        <% end %>
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0"><%= link_to product.item_name, product_path(product)  %></h5>
            <h3 class="mb-0">Â¥<%= product.price %></h3>
          </div>
          <p><%= product.description %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>


<%= link_to "Wanna sell your wares?", new_product_path, class: "btn btn-flat "%>


